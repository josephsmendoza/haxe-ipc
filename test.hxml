ipc.hxml
# this requires hxcpp, hxjava, and hxcs
# this also requires the jre, python3,
# mono and g++ on linux, minimingw on windows.
--times
--main josephsmendoza.ipc.Test
--each
--macro Macros.await()
--python bin/test.py
--next
--macro Macros.python("bin/test.py")
--next
--macro Macros.await()
--cs bin/cs
--next
--macro Macros.cs("bin/cs/bin/Test.exe")
--next
--macro Macros.await()
--jvm bin/test.jar
--cmd java -jar bin/test.jar
--next
--macro Macros.await()
--macro Macros.mingw()
--cpp bin/cpp
--cmd bin/cpp/Test
--next
--macro Macros.clean()